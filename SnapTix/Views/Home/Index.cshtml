@model IEnumerable<SnapTix.Models.Sport>

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>

<p>
    <a asp-controller="Sports" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-danger table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoPath)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owners.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorys.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SportDate)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                    {
                        <img src="@item.PhotoPath" alt="Sport Photo" style="width:125px; height:125px; object-fit: cover;"/>
                    }
                </td>
                <td>
                    <a asp-controller="Sports" asp-action="Edit" asp-route-id="@item.SportId" class="btn btn-primary">Edit</a> |
                    <a asp-controller="Sports" asp-action="Details" asp-route-id="@item.SportId" class="btn btn-primary">Details</a>
                    <a asp-controller="Sports" asp-action="Delete" asp-route-id="@item.SportId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
