@model SnapTix.Models.Sport

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorys)
        </dt>
        <dd class="col-sm-10">
            @(Model.Categorys != null ? Html.DisplayFor(model => model.Categorys.Name) : "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owners)
        </dt>
        <dd class="col-sm-10">
            @(Model.Owners != null ? Html.DisplayFor(model => model.Owners.Name) : "")
        </dd>
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" alt="Sport photo" style="max-width:200px; border-radius:8px;" />
        }
    </dl>
    <hr />
    <h4>Purchases</h4>
    <dl class="row">
        @if (Model.Purchases != null && Model.Purchases.Any())
        {
            @foreach (var purchase in Model.Purchases)
            {
                <dt class="col-sm-2">Buyer Name</dt>
                <dd class="col-sm-10">@purchase.BuyerName</dd>

                <dt class="col-sm-2">Buyer Email</dt>
                <dd class="col-sm-10">@purchase.BuyerEmail</dd>

                <dt class="col-sm-2">Quantity</dt>
                <dd class="col-sm-10">@purchase.Quantity</dd>

                <dt class="col-sm-2">Price Per Ticket</dt>
                <dd class="col-sm-10">@purchase.PricePerTicket.ToString("C")</dd>

                <dt class="col-sm-2">Total Price</dt>
                <dd class="col-sm-10">@purchase.TotalPrice.ToString("C")</dd>

                <dt class="col-sm-2">Purchase Date</dt>
                <dd class="col-sm-10">@purchase.PurchaseDate.ToShortDateString()</dd>

                <hr />
            }
        }
        else
        {
            <dd class="col-sm-12"><em>No purchases yet for this event.</em></dd>
        }
</div>
<div>
    <a asp-controller="Sports" asp-action="Edit" asp-route-id="@Model.SportId" class="btn btn-primary">Edit</a> |
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>



