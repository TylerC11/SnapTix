@model IEnumerable<SnapTix.Models.Sport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorys)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owners)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorys.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owners.OwnerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SportId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SportId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SportId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
